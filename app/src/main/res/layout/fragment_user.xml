<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical">
    <!--3、用户个人信息，包含：头像，昵称，签名，手机号，我发布的活动，-->
    <!--我参与的活动，我完成的活动，我发布的交换信息，我已交换的物品记录。-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@drawable/btn_skyblue"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_height="45dp">
    </android.support.v7.widget.Toolbar>
    <TextView
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22sp"
        android:text="个人界面"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/btn_skyblue"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:ignore="UselessParent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/touxiang"
        android:src="@drawable/touxiang"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:layout_marginTop="38dp"
        android:text="昵称:"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/touxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Name"
            android:layout_marginTop="38dp"
            android:text="xxx"
            android:layout_marginLeft="135dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:text="个性签名:"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/Name"
        android:layout_toRightOf="@+id/touxiang"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
     <TextView
        android:id="@+id/Signature"
        android:text="xxx"
        android:layout_toRightOf="@+id/touxiang"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="88dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
     <TextView
         android:id="@+id/a"
         android:text="手机号:"
         android:textColor="#ffffff"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="25dp"
         android:textSize="18sp"
         android:layout_below="@+id/touxiang"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/Phone"
          android:textSize="18sp"
          android:text="xxx"
          android:textColor="#ffffff"
          android:layout_below="@id/touxiang"
          android:layout_marginTop="25dp"
          android:layout_toRightOf="@id/a"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <!--用户个人信息，包含：头像，昵称，签名，手机号，我发布的活动，-->
    <!--我参与的活动，我完成的活动，我发布的交换信息，我已交换的物品记录(换入，换出)。-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/exchange_out"
            android:background="@drawable/exchangeout"
            android:layout_marginLeft="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/exchange_out"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:text="我的换出"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:background="#cccccc"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/exchange_in"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:background="@drawable/exchangein"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="58dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_below="@id/exchange_in"
                android:textColor="#000000"
                android:text="我的换入"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <!--用户个人信息，包含：头像，昵称，签名，手机号，我发布的活动，-->
    <!--我参与的活动，我完成的活动，我发布的交换信息，我已交换的物品记录。-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/issue"
            android:background="@drawable/issue"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="45dp"
        android:layout_height="45dp" />
            <TextView
                android:text="发布活动"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:layout_below="@id/issue"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/information"
            android:background="@drawable/interaction"
            android:layout_marginTop="20dp"
          android:layout_centerHorizontal="true"
          android:layout_width="45dp"
          android:layout_height="45dp" />
            <TextView
                android:text="交换信息"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:layout_below="@id/information"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/participate"
            android:background="@drawable/participate"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:text="我参与的"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_below="@id/participate"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>